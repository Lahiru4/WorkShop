         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../img/icons8-print-48.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
      <JFXButton fx:id="viewBill" contentDisplay="TOP" layoutX="297.0" layoutY="40.0" onAction="#viewBillOnAction" prefHeight="95.0" prefWidth="116.0" text="View Bill">
