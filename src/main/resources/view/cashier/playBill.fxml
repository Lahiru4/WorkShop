<AnchorPane prefHeight="360.0" prefWidth="510.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.cashier.PlayBillController">
   <children>
      <TextField layoutX="40.0" layoutY="184.0" prefHeight="33.0" prefWidth="430.0" promptText="gmail" />
      <JFXButton fx:id="sendMail" layoutX="306.0" layoutY="253.0" prefHeight="52.0" prefWidth="162.0" text="Send Mail">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../img/icons8-send-email-48.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="15.0" />
         </font>
      </JFXButton>
